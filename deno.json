{
  "nodeModulesDir": "auto",
  "fmt": {
    "lineWidth": 120,
    "proseWrap": "never",
    "singleQuote": true
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "hook": "lefthook install",
    "user-defaults": "deno run --allow-all ./src/user-defaults.ts",
    "tasks": "deno run --allow-all ./src/tasks.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "lefthook": "npm:lefthook@^1.11.13"
  }
}
