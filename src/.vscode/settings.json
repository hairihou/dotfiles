{
  "claudeCode.preferredLocation": "panel",
  "claudeCode.useTerminal": true,
  "cSpell.customDictionaries": {
    "knownWords": {
      "name": "knownWords",
      "path": "~/dotfiles/dist/.tmp/known-words.txt",
      "scope": "user"
    }
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'UDEV Gothic 35NFLG', monospace",
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 2,
  // "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.css": "tailwindcss",
    "*ignore": "ignore"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "scminput": false
  },
  "githubPullRequests.pullBranch": "never",
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit"
  },
  "notebook.formatOnSave.enabled": true,
  "tailwindCSS.experimental.classRegex": [["[\"']([^\"']*)[\"']"]],
  "terminal.integrated.fontFamily": "'UDEV Gothic 35NFLG', monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.suggest.enabled": false,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "window.commandCenter": false,
  "window.title": "\u0020",
  "workbench.colorTheme": "Tailwind CSS Dark",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.tree.indent": 16,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "todo-tree.filtering.excludeGlobs": ["node_modules", "dist"],
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "@todo"
  ],
  "todo-tree.general.tagGroups": {
    "TODO": ["@todo", "ToDo", "TODO"]
  },
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.highlights.backgroundColourScheme": [
    "#f38ba8",
    "#fab387",
    "#f9e2af",
    "#a6e3a1",
    "#89b4fa",
    "#b4befe",
    "#cdd6f4"
  ],
  "todo-tree.highlights.foregroundColourScheme": ["#1e1e2e"],
  "todo-tree.highlights.defaultHighlight": {
    "fontStyle": "italic",
    "type": "text-and-comment"
  },
  "todo-tree.regex.regex": "(\\*|//|#|<!--|;|/\\*|^|^[ \\t]*\\*)\\s*($TAGS)"
}
