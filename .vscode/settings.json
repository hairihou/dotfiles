{
  "chat.agent.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'MonaspiceAr Nerd Font Mono', monospace",
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 2,
  "files.associations": {
    "*.css": "tailwindcss",
    "*ignore": "ignore"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.nextEditSuggestions.enabled": false,
  "githubPullRequests.pullBranch": "never",
  "makefile.configureOnOpen": false,
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "redhat.telemetry.enabled": false,
  "shellformat.effectLanguages": ["shellscript"],
  "tailwindCSS.experimental.classRegex": [["[\"']([^\"']*)[\"']"]],
  "terminal.integrated.fontFamily": "'MonaspiceAr Nerd Font Mono', monospace",
  "terminal.integrated.fontSize": 14,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "window.commandCenter": false,
  "window.title": "\u0020",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.tree.indent": 24,
  "yaml.maxItemsComputed": 1000,
  "[makefile]": {
    "editor.defaultFormatter": "EditorConfig.EditorConfig"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "todo-tree.filtering.excludeGlobs": ["**/node_modules", "**/dist"],
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "@todo"
  ],
  "todo-tree.general.tagGroups": {
    "TODO": ["@todo", "ToDo", "TODO"]
  },
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.highlights.backgroundColourScheme": [
    "#f38ba8",
    "#fab387",
    "#f9e2af",
    "#a6e3a1",
    "#89b4fa",
    "#b4befe",
    "#cdd6f4"
  ],
  "todo-tree.highlights.foregroundColourScheme": ["#1e1e2e"],
  "todo-tree.highlights.defaultHighlight": {
    "fontStyle": "italic",
    "type": "text-and-comment"
  },
  "todo-tree.regex.regex": "(\\*|//|#|<!--|;|/\\*|^|^[ \\t]*\\*)\\s*($TAGS)",
  "cSpell.userWords": [
    "3rdparty",
    "devcontainers",
    "modelcontextprotocol",
    "noopener",
    "noreferrer",
    "openapi",
    "rgba",
    "rolldown",
    "tailwindcss",
    "tanstack",
    "tseslint",
    "unplugin",
    "valibot",
    "vite"
  ]
}
