{
  "chat.agent.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'MonaspiceAr Nerd Font', monospace",
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "githubPullRequests.pullBranch": "never",
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "terminal.integrated.fontFamily": "'MonaspiceAr Nerd Font', monospace",
  "terminal.integrated.fontSize": 14,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "window.commandCenter": false,
  "window.title": "\u0020",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.tree.indent": 24,
  "todo-tree.filtering.excludeGlobs": ["**/node_modules", "**/dist"],
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "@todo"
  ],
  "todo-tree.general.tagGroups": {
    "TODO": ["@todo", "TODO"]
  },
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.highlights.backgroundColourScheme": [
    "#f38ba8",
    "#fab387",
    "#f9e2af",
    "#a6e3a1",
    "#89b4fa",
    "#b4befe",
    "#cdd6f4"
  ],
  "todo-tree.highlights.foregroundColourScheme": ["#1e1e2e"],
  "todo-tree.highlights.defaultHighlight": {
    "fontStyle": "italic",
    "type": "text-and-comment"
  },
  "todo-tree.regex.regex": "(\\*|//|#|<!--|;|/\\*|^|^[ \\t]*\\*)\\s*($TAGS)",
  "cSpell.userWords": [
    "3rdparty",
    "akafuku",
    "appbar",
    "autodocs",
    "autohide",
    "autoprefixer",
    "axios",
    "bierner",
    "cadran",
    "catppuccin",
    "colada",
    "committerdate",
    "csrftoken",
    "denoland",
    "devcontainers",
    "dotfiles",
    "dragover",
    "dropzone",
    "ehozon",
    "esbenp",
    "extrathick",
    "goreleaser",
    "gtag",
    "hairihou",
    "hanbai",
    "hiragino",
    "hushlogin",
    "iconify",
    "intlify",
    "kaku",
    "killall",
    "kinnosuke",
    "kintai",
    "kyuyo",
    "lefthook",
    "lhci",
    "lighthouseci",
    "meiryo",
    "meisai",
    "mizuno",
    "monaspace",
    "monaspice",
    "mouvement",
    "navi",
    "neos",
    "noopener",
    "noreferrer",
    "noto",
    "nuxt",
    "openapi",
    "openapitools",
    "orbstack",
    "peco",
    "persistedstate",
    "pinia",
    "postcss",
    "pycache",
    "pylance",
    "rakuraku",
    "rakus",
    "recents",
    "reka",
    "rgba",
    "rustup",
    "safelist",
    "safelisting",
    "seikyu",
    "seisan",
    "ssooff",
    "subphase",
    "swiftlint",
    "tailwindcss",
    "tanstack",
    "tilesize",
    "tsbuildinfo",
    "tseslint",
    "typespec",
    "unplugin",
    "valibot",
    "venv",
    "vite",
    "vitejs",
    "vitest",
    "vuetify",
    "wagashi",
    "xlink",
    "ymizuno",
    "yonosuke",
    "yusuke",
    "zenn"
  ],
  "mcp": {
    "servers": {
      "playwright": {
        "command": "pnpm",
        "args": ["dlx", "@playwright/mcp@latest", "--headless"]
      },
      "github": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "-e",
          "GITHUB_PERSONAL_ACCESS_TOKEN",
          "ghcr.io/github/github-mcp-server"
        ],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "<github_token>"
        }
      }
    }
  }
}
